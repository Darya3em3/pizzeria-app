{
    "compilerOptions": {
        // Type Checking
        "strict": true,
        // Modules
        "module": "CommonJS",
        "moduleResolution": "Node",
        // Emit
        "downlevelIteration": true,
        "outDir": "./dest/",
        "sourceMap": true,
        // JavaScript Support
        "allowJs": true,
        // Lanquage and Environment
        "target": "ES6",
        // Completeness
        "skipLibCheck": true,
    }
}